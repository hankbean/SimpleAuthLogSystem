@page
@model SimpleAuthLog.Pages.IndexModel
@{
    ViewData["Title"] = "管理系統";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>新增使用者</h2>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="NewUser.Username" class="form-label">使用者名稱</label>
                    <input asp-for="NewUser.Username" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="NewUser.Password" class="form-label">密碼</label>
                    <input asp-for="NewUser.Password" type="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">新增</button>
            </form>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3">@Model.Message</div>
            }
        </div>

        <div class="col-md-6">
            <h2>操作日誌</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>使用者ID</th>
                        <th>操作內容</th>
                        <th>時間</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.AuditLogs)
                    {
                        <tr>
                            <td>@log.UserId</td>
                            <td>@log.Action</td>
                            <td>@log.Timestamp.ToLocalTime()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
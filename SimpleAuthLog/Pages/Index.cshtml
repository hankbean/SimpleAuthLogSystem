@page
@model SimpleAuthLog.Pages.IndexModel
@{
    ViewData["Title"] = "首頁 - 稽核日誌";
}

<div class="text-center">
    <h1 class="display-4">稽核日誌管理系統</h1>
</div>

<hr />

<div class="col-md-12">
    <h2>操作日誌</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>使用者ID</th>
                <th>操作內容</th>
                <th>時間</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.AuditLogs)
            {
                <tr>
                    <td>@log.UserId</td>
                    <td>@log.Action</td>
                    <td>@log.Timestamp.ToLocalTime()</td>
                </tr>
            }
        </tbody>
    </table>
</div>